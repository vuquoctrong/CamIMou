<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/transparent"
    android:orientation="vertical">


    <LinearLayout
        android:background="@drawable/mobile_common_radius_5dp_white_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_25"
        android:layout_marginRight="@dimen/px_25"
        android:layout_marginBottom="@dimen/px_50"
        android:padding="@dimen/px_50"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/add_device_tip_not_support_5g_title"
            android:textColor="@color/c2"
            android:textSize="@dimen/px_40" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:gravity="left"
            android:text="@string/add_device_tip_not_support_5g_1"
            android:textColor="@color/c2"
            android:textSize="@dimen/px_32"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_32"
            android:gravity="left"
            android:text="@string/add_device_tip_not_support_5g_2"
            android:textColor="@color/c2"
            android:textSize="@dimen/px_32" />

        <TextView
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:layout_marginTop="@dimen/px_70"
            android:layout_marginBottom="@dimen/px_20"
            android:background="@drawable/mobile_common_next_btn_selector"
            android:gravity="center"
            android:text="@string/common_i_know"
            android:textColor="@color/c10"
            android:textSize="@dimen/px_30" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/iotadd_c43">

    <include
        android:id="@+id/iotadd_title"
        layout="@layout/iotadd_ac_common_title" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/banner_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp" />

    <TextView
        android:id="@+id/stepTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/banner_view"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/add_device_common_margin_35"
        android:layout_marginEnd="25dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/iotadd_c40"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stepOperate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stepTitle"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="25dp"
        android:lineSpacingMultiplier="1.2"
        android:text=""
        android:textColor="@color/iotadd_c40"
        android:textSize="@dimen/mobile_common_sp_16" />

    <TextView
        android:id="@+id/iotadd_guide_operate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="37.5dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="37.5dp"
        android:layout_marginBottom="@dimen/mobile_common_dp_30"
        android:background="@drawable/iotadd_common_next_btn_selector"
        android:gravity="center"
        android:text="@string/common_next"
        android:textColor="@color/iotadd_c43"
        android:textSize="16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/iotadd_guide_operate"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical">

        <!--        <CheckBox-->
        <!--            android:id="@+id/iotadd_cb_tip"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginRight="@dimen/mobile_common_dp_6"-->
        <!--            android:button="@drawable/iotadd_cb_style"-->
        <!--            android:gravity="center"-->
        <!--            android:visibility="gone" />-->

        <TextView
            android:id="@+id/iotadd_tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/iotadd_c10"
            android:textSize="@dimen/t5" />
    </LinearLayout>


</RelativeLayout>
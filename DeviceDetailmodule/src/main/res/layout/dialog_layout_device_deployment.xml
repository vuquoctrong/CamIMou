<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_horizontal"
    android:layout_marginLeft="@dimen/px_70"
    android:layout_marginRight="@dimen/px_70"
    android:background="@drawable/mobile_common_dialog_bg"
    android:gravity="center"
    android:minWidth="1000dp"
    android:orientation="vertical"
    android:padding="@dimen/px_50">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/c40"
        android:textSize="@dimen/f0"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:gravity="left"
        android:textColor="@color/c40"
        android:textSize="@dimen/px_32"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_message2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textColor="@color/c11"
        android:textSize="@dimen/px_28"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/rb_never_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_40"
            android:button="@drawable/mobile_common_check_box_selector"
            android:paddingLeft="@dimen/px_20"
            android:text="@string/mobile_common_common_never_remind"
            android:textColor="@color/c11"
            android:textSize="@dimen/px_28"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100">

            <LinearLayout
                android:id="@+id/two_button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_left_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px_20"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_cancle_btn_bg"
                    android:gravity="center"
                    android:textColor="@color/c11"
                    android:textSize="@dimen/px_32"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_right_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_weight="1"
                    android:background="@drawable/dialog_conform_btn_bg"
                    android:gravity="center"
                    android:textColor="@color/c10"
                    android:textSize="@dimen/px_32" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_single_btn"
                android:layout_width="@dimen/px_260"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dialog_conform_btn_bg"
                android:gravity="center"
                android:textColor="@color/c10"
                android:textSize="@dimen/px_32"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
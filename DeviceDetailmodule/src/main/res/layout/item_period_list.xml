<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:timeBar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        style="@style/menu_item_container_style"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:background="@color/c43"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15">

        <TextView
            android:id="@+id/week_day"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/c40"
            android:textSize="@dimen/t3" />

        <com.mm.android.mobilecommon.widget.TimeBlockBar
            android:id="@+id/time_block_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_70"
            android:layout_marginStart="@dimen/px_46"
            android:layout_weight="8"
            timeBar:background_color="@color/c4"
            timeBar:fill_color="@color/c20"
            timeBar:max_time="hour_24"
            timeBar:scale_text_color="@color/c41"
            timeBar:thumb_color="@color/c41"
            android:layout_marginLeft="@dimen/px_46" />
    </LinearLayout>
</LinearLayout>


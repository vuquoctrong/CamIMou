<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" >
        <shape>
            <corners android:radius="25dp" />
            <gradient android:angle="270" android:centerColor="#f0f0f0"
                android:centerY="0.75" android:endColor="#f0f0f0"
                android:startColor="#f0f0f0" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="25dp" />
                <gradient android:angle="270" android:centerColor="#f0f0f0"
                    android:centerY="0.75" android:endColor="#f0f0f0"
                    android:startColor="#f0f0f0" />
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="25dp" />
                <gradient android:angle="270" android:centerColor="@color/c1"
                    android:centerY="0.75" android:endColor="@color/c1"
                    android:startColor="@color/c1" />
            </shape>
        </clip>
    </item>
</layer-list>